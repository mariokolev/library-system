<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="372dp"
        android:layout_height="654dp"
        android:background="#fff"
        app:circularflow_radiusInDP="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.395">

        <TextView
            android:id="@+id/borrowDetailsCondition"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="textStart"
            android:textSize="16dp"
            android:textStyle="normal"
            android:minHeight="29dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toEndOf="@+id/textViewCondition"
            app:layout_constraintTop_toBottomOf="@+id/borrowDetailsDateReturned" />

        <TextView
            android:id="@+id/borrowDetailsDateReturned"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAlignment="textStart"
            android:textSize="16dp"
            android:textStyle="normal"
            android:minHeight="29dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.238"
            app:layout_constraintStart_toEndOf="@+id/textViewDateReturned"
            app:layout_constraintTop_toBottomOf="@+id/borrowDetailsDateAdded" />

        <TextView
            android:id="@+id/borrowDetailsDateAdded"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:minHeight="29dp"
            android:textAlignment="textStart"
            android:textSize="16dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toEndOf="@+id/textViewDateAdded"
            app:layout_constraintTop_toBottomOf="@+id/borrowDetailsOperatorNickname" />

        <TextView
            android:id="@+id/borrowDetailsOperatorNickname"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAlignment="textStart"
            android:textSize="16dp"
            android:textStyle="normal"
            android:minHeight="29dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.238"
            app:layout_constraintStart_toEndOf="@+id/textViewOperatorNickname"
            app:layout_constraintTop_toBottomOf="@+id/borrowDetailsOperatorId" />

        <TextView
            android:id="@+id/borrowDetailsOperatorId"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:minHeight="29dp"
            android:textAlignment="textStart"
            android:textSize="16dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toEndOf="@+id/textViewOperatorId"
            app:layout_constraintTop_toBottomOf="@+id/borrowDetailsReaderNickname" />

        <TextView
            android:id="@+id/borrowDetailsReaderNickname"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:minHeight="29dp"
            android:textAlignment="textStart"
            android:textSize="16dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toEndOf="@+id/textViewReaderNickname"
            app:layout_constraintTop_toBottomOf="@+id/borrowDetailsReaderid" />

        <TextView
            android:id="@+id/borrowDetailsTitle"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAlignment="textStart"
            android:textSize="16dp"
            android:textStyle="normal"
            android:minHeight="29dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toEndOf="@+id/textViewTitle"
            app:layout_constraintTop_toBottomOf="@+id/borrowDetailsBookId" />

        <TextView
            android:id="@+id/borrowDetailsReaderid"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAlignment="textStart"
            android:textSize="16dp"
            android:textStyle="normal"
            android:minHeight="29dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toEndOf="@+id/textViewReaderid"
            app:layout_constraintTop_toBottomOf="@+id/borrowDetailsTitle" />

        <TextView
            android:id="@+id/borrowDetailsBookId"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAlignment="textStart"
            android:textSize="16dp"
            android:textStyle="normal"
            android:minHeight="29dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toEndOf="@+id/textViewid"
            app:layout_constraintTop_toBottomOf="@+id/borrowDetailsId" />

        <TextView
            android:id="@+id/textViewCondition"
            android:layout_width="142dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Състояние:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/borrowDetailsDateReturned" />

        <TextView
            android:id="@+id/textViewOperatorNickname"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Потребителско име на оператор"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/borrowDetailsOperatorId" />

        <TextView
            android:id="@+id/textViewOperatorId"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Номер на оператор(ID):"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/borrowDetailsReaderNickname" />

        <TextView
            android:id="@+id/textViewReaderNickname"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Потребителско име на читател:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/borrowDetailsReaderid" />

        <TextView
            android:id="@+id/textViewReaderid"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Номер на читател(ID):"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/borrowDetailsTitle" />

        <TextView
            android:id="@+id/borrowDetailsId"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="textStart"
            android:textSize="16dp"
            android:textStyle="normal"
            android:minHeight="29dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textViewBorrowId"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewBorrowId"
            android:layout_width="142dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Номер(ID):"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewid"
            android:layout_width="142dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Номер на книга(ID):"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/borrowDetailsId" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="142dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Заглавие:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/borrowDetailsBookId" />

        <TextView
            android:id="@+id/textViewDateAdded"
            android:layout_width="142dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Дата на добавяне:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/borrowDetailsOperatorNickname" />

        <TextView
            android:id="@+id/textViewDateReturned"
            android:layout_width="142dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Дата на връщане:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDateAdded" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>